        <template id="city_details">
            <t t-call="portal.portal_layout">
                <form role="form" action="/channel" method="POST">
                    <div class="oe_login_buttons">
                        <button type="Create" class="btn-primary pull-left">Create Customer</button>
                    </div>
                </form>
                <t t-if="objects" t-call="portal.portal_table">
                    <thead>
                        <tr class="active">
                            <th>Customer Name</th>
                            <th>City</th>
                            <th>State</th>
                            <th>Phone</th>
                        </tr>
                    </thead>
                    <t t-foreach="objects" t-as="object">
                        <tr>
                            <td>
                                <a class="class-name" t-attf-href="/academy/{{slug(object)}}">
                                    <t t-esc="object.display_name"/>
                                </a>
                            </td>
                            <td>
                                <t t-esc="object.city"/>
                            </td>
                            <td>
                                <t t-esc="object.state_id.name"/>
                            </td>
                            <td>
                                <t t-esc="object.phone"/>
                            </td>
                        </tr>
                    </t>
                </t>
            </t>
        </template>
<!--        Ended by Appscomp-->

