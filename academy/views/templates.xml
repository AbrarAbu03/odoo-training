        <template id="user_details" name="registration_user">
            <!--              <div class="form-group">-->
            <!--                <button type="button" class="btn btn-primary pull-right">Create</button>-->
            <!--                </div>-->
             <t t-call="website.layout">
                  <div class="container">
            <form role="form" action="" method="">

                <div class="form-group">
                    <label for="name" class="control-label">Name:</label>
                    <input type="text" name="user_name" t-att-value="user_name" id="user_name"
                           class="form-control" placeholder="Enter name" required="required"/>
                </div>
                <div class="form-group">
                    <br>
                        <label for="email" class="control_label">Email</label>
                    </br>
                    <input type="text" name="email_user" t-att-value="email_user" id="email_user"
                           class="form-control" placeholder="Enter email" required="required"/>
                </div>
                <div class="form-group">
                    <br>
                        <label for="password" class="control-label">Password</label>
                    </br>
                    <input type="text" name="password" t-att-value="password" id="password"
                           class="form-control" placeholder="password" required="required"/>
                </div>
                <div class="form-group">
                    <br>
                        <label for="c_password" class="control-label">Confirm Password</label>
                    </br>
                    <input type="text" name="c_password" t-att-value="c_password" id="c_password"
                           class="form-control" placeholder="confirm password" required="required"/>
                </div>
                <div class="form-group">
                    <button grouptype="button" class="btn btn-primary">Submit</button>
                </div>

            </form>
             </div>
             </t>
        </template>
